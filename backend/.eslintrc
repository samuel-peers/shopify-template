{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "ecmaFeatures": {
    "destructuring": true,
    "spread": true
  },
  "rules": {
    "max-len": ["error", { "code": 80 }],
    "no-console": 0,
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/test/**/*.js", "**/*.test.js"] }
    ]
  }
}
